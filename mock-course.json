    "version": "1.0.0",
    "modules": [
      {
        "title": "Paper 1 - Computer Based Test",
        "moduleType": "core",
        "description": "CBT exam focused on listening and comprehension.",
        "units": [
          {
            "title": "Part 1 - General Listening",
            "contentBlocks": [
              {
                "type": "text",
                "content": "test",
                "order": 1
              },
              {
                "type": "video",
                "content": "https://cdn.example.com/videos/general-listening-intro.mp4",
                "order": 2
              },
              {
                "type": "text",
                "content": "Key concepts for general listening in ATC communications",
                "order": 3
              }
            ],
            "practice": {
              "title": "Practice - Part 1",
              "description": "Practice general listening with MCQs.",
              "activities": [
                {
                  "type": "mcq",
                  "prompt": "What is the ATC instruction given?",
                  "media": {
                    "url": "https://cdn.example.com/audio/instruction1.mp3"
                  },
                  "options": [
                    "Descend to FL90",
                    "Climb to FL90",
                    "Maintain FL90"
                  ],
                  "correctAnswer": "Descend to FL90",
                  "feedback": "Listen again and identify the verb 'descend'."
                },
                {
                  "type": "mcq",
                  "prompt": "What weather condition was reported?",
                  "media": {
                    "url": "https://cdn.example.com/audio/weather-report1.mp3"
                  },
                  "options": [
                    "Heavy rain and thunderstorms",
                    "Light turbulence and clear skies",
                    "Strong crosswinds and low visibility"
                  ],
                  "correctAnswer": "Strong crosswinds and low visibility",
                  "feedback": "Pay attention to wind direction and visibility reports."
                },
                {
                  "type": "mcq",
                  "prompt": "What was the assigned parking gate?",
                  "media": {
                    "url": "https://cdn.example.com/audio/parking-instruction.mp3"
                  },
                  "options": ["Gate A15", "Gate B15", "Gate C15"],
                  "correctAnswer": "Gate B15",
                  "feedback": "Listen carefully for the gate letter and number combination."
                }
              ]
            }
          },
          {
            "title": "Part 2 - Emergency Listening",
            "contentBlocks": [
              {
                "type": "video",
                "content": "https://cdn.example.com/videos/emergency-scenarios.mp4",
                "order": 1
              },
              {
                "type": "text",
                "content": "Understanding emergency protocols and procedures",
                "order": 2
              },
              {
                "type": "audio",
                "content": "https://cdn.example.com/audio/emergency-calls-examples.mp3",
                "order": 3
              }
            ],
            "practice": {
              "title": "Emergency Scenarios Practice",
              "description": "Practice handling various emergency situations",
              "activities": [
                {
                  "type": "audio_input",
                  "prompt": "Aircraft reports engine failure. Provide appropriate instructions.",
                  "media": {
                    "url": "https://cdn.example.com/audio/engine-failure-scenario.mp3"
                  },
                  "feedback": "Remember to prioritize safety and provide clear, concise instructions."
                },
                {
                  "type": "mcq",
                  "prompt": "What is the correct emergency frequency?",
                  "media": null,
                  "options": ["121.5 MHz", "243.0 MHz", "Both A and B"],
                  "correctAnswer": "Both A and B",
                  "feedback": "Both frequencies are international emergency frequencies."
                }
              ]
            }
          }
        ]
      },
      {
        "title": "Paper 2 - Oral Interaction",
        "moduleType": "oral",
        "description": "Oral interview with tasks based on aviation scenarios.",
        "units": [
          {
            "title": "Task 1A - Situation Response",
            "contentBlocks": [
              {
                "type": "text",
                "content": "<p>In this task, you'll respond to unexpected situations.</p>",
                "order": 1
              },
              {
                "type": "video",
                "content": "https://cdn.example.com/videos/situation-response-tutorial.mp4",
                "order": 2
              }
            ],
            "practice": {
              "title": "Practice - Task 1A",
              "description": "Simulate emergency responses.",
              "activities": [
                {
                  "type": "audio_input",
                  "prompt": "A bird strike just occurred. Report the situation to ATC.",
                  "media": null,
                  "feedback": "Ensure you include aircraft status, intentions, and request support."
                },
                {
                  "type": "audio_input",
                  "prompt": "Report severe turbulence encountered during climb.",
                  "media": null,
                  "feedback": "Include altitude, intensity, and any requests for level change."
                }
              ]
            }
          },
          {
            "title": "Task 1B - Standard Phraseology",
            "contentBlocks": [
              {
                "type": "text",
                "content": "Master standard ICAO phraseology for routine communications",
                "order": 1
              },
              {
                "type": "audio",
                "content": "https://cdn.example.com/audio/standard-phraseology-examples.mp3",
                "order": 2
              }
            ],
            "practice": {
              "title": "Standard Phraseology Drills",
              "description": "Practice using correct standard phraseology",
              "activities": [
                {
                  "type": "audio_input",
                  "prompt": "Issue departure clearance using standard phraseology",
                  "media": null,
                  "feedback": "Remember to include all necessary elements in the correct order."
                },
                {
                  "type": "mcq",
                  "prompt": "Select the correct standard phrase for speed restriction",
                  "options": [
                    "Maintain maximum speed",
                    "Maintain present speed",
                    "Continue at current speed"
                  ],
                  "correctAnswer": "Maintain present speed",
                  "feedback": "This is the standard ICAO phraseology for speed maintenance."
                }
              ]
            }
          },
          {
            "title": "Task 2 - Complex Scenarios",
            "contentBlocks": [
              {
                "type": "text",
                "content": "Handle multiple aircraft and complex traffic situations",
                "order": 1
              },
              {
                "type": "video",
                "content": "https://cdn.example.com/videos/complex-scenarios.mp4",
                "order": 2
              }
            ],
            "practice": {
              "title": "Complex Traffic Management",
              "description": "Practice handling multiple aircraft in challenging situations",
              "activities": [
                {
                  "type": "audio_input",
                  "prompt": "Manage approach sequence for three aircraft in poor weather",
                  "media": null,
                  "feedback": "Consider separation, weather impact, and sequence optimization."
                }
              ]
            }
          },
          {
            "title": "Task 3 - Full Simulation",
            "contentBlocks": [
              {
                "type": "video",
                "content": "https://cdn.example.com/videos/full-simulation-briefing.mp4",
                "order": 1
              },
              {
                "type": "text",
                "content": "Final assessment preparation and guidelines",
                "order": 2
              }
            ],
            "simulation": {
              "title": "ELPAC Final Simulation",
              "description": "Complete oral simulation under timed conditions.",
              "videoIntro": "https://cdn.example.com/videos/elpac_sim_intro.mp4",
              "steps": [
                {
                  "prompt": "Brief ATC about your delayed departure due to weather.",
                  "inputType": "audio",
                  "validationLogic": {
                    "expectedKeywords": ["weather", "delay", "ETA"],
                    "minLengthSec": 10
                  }
                },
                {
                  "prompt": "Respond to an unexpected runway incursion.",
                  "inputType": "audio",
                  "validationLogic": {
                    "expectedKeywords": ["runway", "stop", "emergency"],
                    "minLengthSec": 12
                  }
                },
                {
                  "prompt": "Handle simultaneous emergency and routine traffic.",
                  "inputType": "audio",
                  "validationLogic": {
                    "expectedKeywords": ["priority", "standby", "emergency"],
                    "minLengthSec": 15
                  }
                },
                {
                  "prompt": "Coordinate complex approach sequence in degraded radar conditions.",
                  "inputType": "audio",
                  "validationLogic": {
                    "expectedKeywords": [
                      "sequence",
                      "spacing",
                      "report",
                      "position"
                    ],
                    "minLengthSec": 20
                  }
                }
              ]
            }
          }
        ]
      },
      {
        "title": "Paper 3 - Radiotelephony Skills",
        "moduleType": "oral",
        "description": "Advanced radiotelephony practice with real-world scenarios.",
        "units": [
          {
            "title": "Radio Communication Basics",
            "contentBlocks": [
              {
                "type": "text",
                "content": "Fundamental principles of clear radio communication",
                "order": 1
              },
              {
                "type": "audio",
                "content": "https://cdn.example.com/audio/radio-basics.mp3",
                "order": 2
              }
            ],
            "practice": {
              "title": "Radio Communication Exercises",
              "description": "Basic radio communication practice",
              "activities": [
                {
                  "type": "audio_input",
                  "prompt": "Practice proper radio call sign usage",
                  "media": null,
                  "feedback": "Remember to use complete call signs in initial contact."
                },
                {
                  "type": "mcq",
                  "prompt": "Select the correct readback format",
                  "options": [
                    "Partial readback with acknowledgment",
                    "Complete readback with call sign",
                    "Acknowledgment only"
                  ],
                  "correctAnswer": "Complete readback with call sign",
                  "feedback": "Always provide complete readback for ATC clearances."
                }
              ]
            }
          }
        ]
      }
    ]
