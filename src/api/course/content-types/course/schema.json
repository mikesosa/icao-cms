{
  "kind": "collectionType",
  "collectionName": "courses",
  "info": {
    "singularName": "course",
    "pluralName": "courses",
    "displayName": "Course",
    "description": "A course containing modules and learning content"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "language": {
      "type": "enumeration",
      "enum": [
        "en",
        "es"
      ],
      "required": true
    },
    "category": {
      "type": "string",
      "required": true
    },
    "introMedia": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "videos"
      ]
    },
    "modules": {
      "type": "component",
      "repeatable": true,
      "component": "module.module"
    },
    "isPublished": {
      "type": "boolean",
      "default": false
    },
    "version": {
      "type": "string",
      "required": true
    }
  }
} 